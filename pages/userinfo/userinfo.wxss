page{
  background: #f5f5f5;
}
.wrap{
  width: 90%;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 10rpx;
  margin: 30rpx auto;
  box-sizing: border-box;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e5e5e5;
  font-size: 30rpx;
  color: #666;
}
.item:last-child{
  border-bottom: 2rpx solid transparent;
}
.item_b>view:nth-child(1):after {
  content: "*";
  color: red;
  margin-left:2px;
}
.name_show{
  display: flex;
  align-items: center;
  color: #999;
  text-align: right;
}
.logout{
  width: 80%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  margin: 150rpx auto 10rpx;  
  background:#adc6e5; 
  border-radius: 40rpx;
  box-shadow: 0 0 4rpx 14rpx #cbdef5;
  color: #fff;
  text-align: center;
}
.weui_btn{
  width: 100rpx;
}