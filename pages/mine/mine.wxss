page{
  min-height: 100%;
  background: #f5f5f5;
}
.bg{
  background: #f5f5f5;
  /* height: 100%; */
  padding-top:300rpx; 
  /* position: relative; */
}
.top{
  margin: 0 30rpx;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
}
.icon_3{
  width: 90%;
  padding: 20rpx 0;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  background: #fff;
  border:2rpx solid #f0f0f0;
  border-radius: 10rpx;
}
.item{
  display: flex;
  flex-direction: column;
  position: relative;
}
.icon_text{
  font-size:30rpx;
  color: #515151; 
}
.num{
  background: #5a913a;
  display: block;
  position: absolute;
  height: 30rpx;
  min-width: 30rpx;
  border-radius: 15rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  top:0;
  right: 15rpx;
}
.list{
  width: 90%;
  margin: 30rpx auto 60rpx;
  padding: 0 30rpx;
  background: #fff;
  border:2rpx solid #f0f0f0;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.list>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  /* border-bottom: 2rpx solid #ddd; */
  font-size: 32rpx;
  color: #666;
}
.list>view:last-child{
  border-bottom: none;
}
.top,.icon_3,.list{
  transform: translateY(-180rpx)
}
.youjiantou{
  width: 50rpx;
  height: 50rpx;
}
.bg_image{
  position: fixed;
  width: 100%;
}
