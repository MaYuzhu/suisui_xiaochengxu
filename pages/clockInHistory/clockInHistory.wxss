page{
  background: #f5f5f5;
}
.wrap{
  padding-top: 10rpx;
}
.border{
  width: 100%;
  height: 2rpx;
  background: #e5e5e5;
  position: fixed;
  top:0;
}

.item{
  position: relative;
  width: 86%;
  /* line-height: 60rpx; */
  background: #fff;
  margin:30rpx auto;
  border-radius: 10rpx;
  box-shadow: 0px 2px 8px 0px #e0e0e0;
  padding: 0 20rpx;
}
.item::before{
  content: '';
  width: 10rpx;
  height: 60rpx;
  background: #facc3e;
  display: block;
  position: absolute;
  left: 0;
  top:50%;
  transform: translate(0,-50%);
  border-radius:5rpx; 
  
}
.summary{
  color:#666;
  font-size: 34rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
  height: 100rpx;
  line-height: 100rpx;
}
.update_time{
  color:#8a8a8a;
