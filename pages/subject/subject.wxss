/* pages/subject/subject.wxss */
page{
  overflow-y: scroll !important;
  overflow: auto;
  background: #efefef;
  min-height: 100%;
}
.bg{
  background: #efefef;
  min-height: 100%;
  padding-bottom: 30rpx;
}
.top{
  background: #fff;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.top_img{
  margin-right: 10rpx;
}
.top_left{
  display: flex;
  align-items: center;
  
}
.content{
  /* height: 1000px; */
  background: #fff;
  border: 2rpx solid #eee;
  border-radius: 20rpx;
  margin: 30rpx;
  padding: 50rpx 40rpx;
}
.button{
  width: 80%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  margin: 80rpx auto 40rpx;  
  background:#facc3e; 
  border-radius: 40rpx;
  box-shadow: 0 0 4rpx 14rpx #f7e8bd;
  color: #fff;
}
.button::after{
    border:none; 
}
.line_botttom{
  border-bottom: 2rpx solid #eee;
  line-height: 70rpx;
  margin-left:1em;
  font-size: 34rpx;
  color:#666;
}
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;
   height: 40rpx;
   border: none;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background:#fff !important;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 40rpx; 
   height: 40rpx; 
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#c2c212; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
.radio_label{
  align-items: center;
}
.radio{
  display: flex;
  align-items: center;
}
.next_wrap{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-around; 
}
.next_wrap>view{
  display: flex;
  justify-content: center;
  align-items: center;
  color:#c2c212;
  width: 280rpx;
  height: 100rpx;
  /* border: 1px solid; */
}
.mask{
  position:fixed;
  width:100%;
  height:100%;
  background: #000000;
  opacity: 0.5;
  z-index: 100;
  top:0;
}
.Drawer{
  position:fixed;
  background:#e8ead5;
  width:520rpx;
  height:100%;
  left:-520rpx;
  z-index: 200;
  top:0;
}
.tihao_title{
  margin: 20rpx;
  font-size: 30rpx;
  color: #c2c212;
}
.tihao_wrap{
  display: flex;
  flex-wrap:wrap;
}
.tihao_item{
  width: 76rpx;
  height: 76rpx;
  background: #fff;
  border-radius: 50%;
  margin: 10rpx;
  text-align: center;
  line-height: 76rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tihao_checked{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  margin: 10rpx;
  text-align: center;
  line-height: 76rpx;
  background: #c2c212;
  color: #fff;
}

