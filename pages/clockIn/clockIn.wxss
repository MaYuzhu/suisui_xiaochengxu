page{
  background: #f9f9f9;
}
.container{
  padding: 30rpx;
  align-items: flex-start;
}
/*评价区域  */
.container{
  background: #f9f9f9;
}
.container .evaluate_contant .evaluate_item {
  font-size: 30rpx;
  color: gray;
  padding: 20rpx;
  display: flex;
  justify-content: flex-start;
}

/*评价标题  */
.container .evaluate_contant .evaluate_item .evaluate_title {
  display: inline-block;
  width: 220rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: right;
}

/*评价盒子  */
.container .evaluate_contant .evaluate_item .evaluate_box {
  display: flex;
  justify-content: space-around;
  width: 60%;
  position: absolute;
  left: 280rpx;
}

/*星星评价的每个图片  */
.container .evaluate_contant .evaluate_item .evaluate_box .star-image {
  position: absolute;

  width: 50rpx;
  height: 50rpx;
  src: "../../images/no-star.png";
}

/*星星的左边和右边区域<点击左边半个星星，点击右边整个星星>  */
.container .evaluate_contant .evaluate_item .evaluate_box .star-image .item {
  position: absolute;
  top: 0rpx;
  width: 56rpx;
  height: 56rpx;
}

/*按钮  */
.container .evaluate_contant .submit_button {
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin: 20rpx; 
  
}
.submit_button {
  width: 80%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  margin: 60rpx auto 10rpx;  
  background:#facc3e; 
  border-radius: 40rpx;
  box-shadow: 0 0 4rpx 14rpx #f7e8bd;
}
.submit_button_no {
  width: 80%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  margin: 60rpx auto 10rpx;  
  background:#ccc; 
  border-radius: 40rpx;
  box-shadow: 0 0 4rpx 14rpx #d9d9d9;
}
.submit_button::after,.submit_button_no::after{
  border:none; 
}
.top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom : 2rpx solid #efefef;
}
.evaluate_contant{
  display: block;
  width: 100%;
}
.text-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}
.detailText{
  border:2rpx #ccc solid;
  display: block;
  margin: 0 auto;
  height: 320rpx;
  font-size: 28rpx;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  width: 90%;
}
.no_content{
  position: absolute;
  width: 200px;
  height: 100px;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.currentWordNumber{
  position: absolute;
  right: 0;
  bottom:0;
  color: #aaa;
}

.arrow{
  display: flex;
  position: fixed;
  transform: rotate(180deg);
  margin-top: 0px;
  margin-left: 5rpx;
  z-index: 999;
}

.avatar_wrap{
  width: 100%;
  height: 140rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom:30rpx;
}
.avatar_wrap>view:nth-child(1){
  display: flex;
  align-items: center;
}
.history{
  height: 50rpx;
  line-height: 50rpx;
  background: #fff;
  border-radius: 50rpx;
  padding: 8rpx 30rpx;
  font-size: 28rpx;
  color: #999;
}