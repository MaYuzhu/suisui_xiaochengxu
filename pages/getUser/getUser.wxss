.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content_shou {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content_shou text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
  width: 80%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  margin: 80rpx auto 40rpx;  
  background:#facc3e; 
  border-radius: 40rpx;
  box-shadow: 0 0 4rpx 14rpx #f7e8bd;
  color: #fff;
}
.hui{
  box-shadow: 0 0 4rpx 14rpx #d9d9d9;
}
.bottom::after{
  border:none; 
}
